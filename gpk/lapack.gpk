-- Lapack gpk script

-- Description of the gpk
description = [[
LAPACK
]]

-- Definition section
definition = {
   pkgname = "lapack",
   pkggroup = "core",
   pkgfamily = "lapack",
}

-- Required types
prerequisite = {"compiler"}

-- Build section
build = {
   -- Source of package
   source = "http://www.netlib.org/lapack/lapack-<pkgversion>.tgz",
   -- Build command
   command = [[
      mkdir build
      cd build

      cmake ../. -DCMAKE_INSTALL_PREFIX=<pkginstall> -DBUILD_STATIC_LIBS=ON -DCMAKE_BUILD_TYPE=RELEASE -DLAPACKE=ON
      
      make -j<nprocesses>
      make install
   ]]
}

-- Lmod section
lmod = {
   help = [[This module loads LAPACK v. <pkgversion>.]],
}

